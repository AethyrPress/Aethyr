{
  "name": "presskit.html",
  "description": "Re-implementation of presskit() in static HTML",
  "version": "0.0.1",
  "author": "Pixelnest Studio",
  "license": "MIT",
  "homepage": "https://github.com/pixelnest/presskit.html#readme",
  "repository": "https://github.com/pixelnest/presskit.html.git",
  "bugs": "https://github.com/pixelnest/presskit.html/issues",
  "main": "lib/main.js",
  "bin": {
    "presskit": "bin/presskit"
  },
  "scripts": {
    "start": "node bin/presskit",
    "test": "standard | snazzy && jest",
    "serve": "browser-sync start --server assets/ --files assets/ --no-ui --no-open --port 8080",
    "servebuild": "npm start && browser-sync start -s build/ -f build/ --no-ui --no-open"
  },
  "standard": {
    "globals": [
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach",
      "it",
      "describe",
      "expect"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=6.5.x"
  },
  "dependencies": {
    "archiver": "^1.3.0",
    "chalk": "^1.1.3",
    "handlebars": "^4.0.6",
    "lodash": "^4.17.2",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "browser-sync": "^2.18.5",
    "jest": "^18.0.0",
    "mock-fs": "^3.12.1",
    "snazzy": "^5.0.0",
    "standard": "^8.6.0"
  }
}
